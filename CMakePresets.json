{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "macos-arm64-debug",
      "displayName": "macOS Apple Silicon Debug",
      "description": "Debug build for macOS on Apple Silicon (arm64) with Qt6",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "13.0",
        "Qt6_DIR": "$env{HOME}/Qt/6.10.1/macos/lib/cmake/Qt6"
      },
      "environment": {
        "CMAKE_PREFIX_PATH": "$env{HOME}/Qt/6.10.1/macos"
      }
    },
    {
      "name": "macos-arm64-release",
      "displayName": "macOS Apple Silicon Release",
      "description": "Release build for macOS on Apple Silicon (arm64) with Qt6",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "13.0",
        "Qt6_DIR": "$env{HOME}/Qt/6.10.1/macos/lib/cmake/Qt6"
      },
      "environment": {
        "CMAKE_PREFIX_PATH": "$env{HOME}/Qt/6.10.1/macos"
      }
    },
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 Debug",
      "description": "Debug build for Windows x64 with Qt6 (default Qt path, override via CMakeUserPresets.json if needed)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "Qt6_DIR": "$env{USERPROFILE}/Qt/6.10.1/msvc2019_64/lib/cmake/Qt6"
      },
      "environment": {
        "CMAKE_PREFIX_PATH": "$env{USERPROFILE}/Qt/6.10.1/msvc2019_64"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-x64-release",
      "displayName": "Windows x64 Release",
      "description": "Release build for Windows x64 with Qt6 (default Qt path, override via CMakeUserPresets.json if needed)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "Qt6_DIR": "$env{USERPROFILE}/Qt/6.10.1/msvc2019_64/lib/cmake/Qt6"
      },
      "environment": {
        "CMAKE_PREFIX_PATH": "$env{USERPROFILE}/Qt/6.10.1/msvc2019_64"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-x64-debug",
      "displayName": "Linux x64 Debug",
      "description": "Debug build for Linux x64 with Qt6 (default Qt path, override via CMakeUserPresets.json if needed)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "Qt6_DIR": "$env{HOME}/Qt/6.10.1/gcc_64/lib/cmake/Qt6"
      },
      "environment": {
        "CMAKE_PREFIX_PATH": "$env{HOME}/Qt/6.10.1/gcc_64"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-x64-release",
      "displayName": "Linux x64 Release",
      "description": "Release build for Linux x64 with Qt6 (default Qt path, override via CMakeUserPresets.json if needed)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "Qt6_DIR": "$env{HOME}/Qt/6.10.1/gcc_64/lib/cmake/Qt6"
      },
      "environment": {
        "CMAKE_PREFIX_PATH": "$env{HOME}/Qt/6.10.1/gcc_64"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "macos-arm64-debug",
      "displayName": "Build macOS Apple Silicon Debug",
      "configurePreset": "macos-arm64-debug"
    },
    {
      "name": "macos-arm64-release",
      "displayName": "Build macOS Apple Silicon Release",
      "configurePreset": "macos-arm64-release"
    },
    {
      "name": "windows-x64-debug",
      "displayName": "Build Windows x64 Debug",
      "configurePreset": "windows-x64-debug"
    },
    {
      "name": "windows-x64-release",
      "displayName": "Build Windows x64 Release",
      "configurePreset": "windows-x64-release"
    },
    {
      "name": "linux-x64-debug",
      "displayName": "Build Linux x64 Debug",
      "configurePreset": "linux-x64-debug"
    },
    {
      "name": "linux-x64-release",
      "displayName": "Build Linux x64 Release",
      "configurePreset": "linux-x64-release"
    }
  ]
}
