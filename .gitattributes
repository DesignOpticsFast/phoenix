# Auto-detect text files and normalize line endings
* text=auto eol=lf

# Explicitly mark text files with LF normalization
*.cpp text eol=lf
*.hpp text eol=lf
*.h   text eol=lf
*.c   text eol=lf
*.cxx text eol=lf
*.cc  text eol=lf
*.cmake text eol=lf
CMakeLists.txt text eol=lf
*.qml text eol=lf
*.qrc text eol=lf
*.md  text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.sh text eol=lf
*.bash text eol=lf
*.pro text eol=lf
*.pri text eol=lf
*.prf text eol=lf

# Treat common binary files as binary
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.ico  binary
*.svg  binary
*.ttf  binary
*.otf  binary
*.woff binary
*.woff2 binary
*.pdf  binary
*.zip  binary
*.tar  binary
*.gz   binary
*.bz2  binary
*.xz   binary
*.so   binary
*.dylib binary
*.dll  binary
*.exe  binary
*.a    binary
*.lib  binary
*.o    binary
*.obj  binary

# Qt-specific
*.qm binary
*.qmlc binary

